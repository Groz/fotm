@{
    ViewBag.Title = "FotM";
}

@section scripts
{
    <!-- TODO: switch to release(minified) versions of scripts -->
    <script src="~/Scripts/knockout-3.1.0.debug.js"></script>
    <script src="~/Scripts/jquery.signalR-2.0.2.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Home/index.js"></script>
}

<h2>
    <span data-bind="text: bracket"></span>
    <span data-bind="text: region"></span>
</h2>


<div class="row">
    <div class="col-lg-3">
        <h2>FotM</h2>
        <table class="table table-striped table-condensed table-responsive col-lg-1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Setup</th>
                    <th>Percent</th>
                </tr>
            </thead>
            
            <tbody data-bind="foreach: model().TeamSetupsViewModels">
                <tr>
                    <td data-bind="text: Rank"></td>
                    <td>
                        <!-- ko foreach: Specs -->
                        <img data-bind="attr:{src: ClassImageLink}" alt="SpecImage" />
                        <img data-bind="attr:{src: SpecImageLink}" alt="SpecImage" />
                        <!-- /ko -->
                    </td>
                    <td data-bind="text: Percent"></td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="col-lg-9">
        <h2>Leaderboard</h2>
        <table class="table table-striped table-condensed table-responsive table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Faction</th>
                    <th>Player 1</th>
                    <th>Player 2</th>
                    <th>Player 3</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: model().AllTimeLeaders">
                <tr>
                    <td data-bind="text: Rank"></td>
                    <td>
                        <img data-bind="attr:{src: FactionImageLink}" alt="FactionImage" />
                    </td>

                    <!-- ko foreach: Players -->
                    <td>
                        <img data-bind="attr:{src: RaceImageLink}" alt="RaceImage" />
                        <img data-bind="attr:{src: ClassImageLink}" alt="ClassImage" />
                        <img data-bind="attr:{src: SpecImageLink}" alt="SpecImage" />
                        <span data-bind="text: Name"></span>
                        -
                        <span data-bind="text: Realm"></span>
                    </td>
                    <!-- /ko -->

                    <td data-bind="text: Rating"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <h2>Playing now</h2>
    <table class="table table-striped table-condensed table-responsive table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Faction</th>
                <th>Player 1</th>
                <th>Player 2</th>
                <th>Player 3</th>
                <th>Rating</th>
                <th>Delta</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: model().PlayingNow">
            <tr data-bind="css: DeltaType">
                <td data-bind="text: Rank"></td>
                <td>
                    <img data-bind="attr:{src: FactionImageLink}" alt="FactionImage" />
                </td>

                <!-- ko foreach: Players -->
                <td>
                    <img data-bind="attr:{src: RaceImageLink}" alt="RaceImage" />
                    <img data-bind="attr:{src: ClassImageLink}" alt="ClassImage" />
                    <img data-bind="attr:{src: SpecImageLink}" alt="SpecImage" />
                    <span data-bind="text: Name"></span>
                    -
                    <span data-bind="text: Realm"></span>
                </td>
                <!-- /ko -->

                <td data-bind="text: Rating"></td>
                <td data-bind="text: RatingChange"></td>
                <td data-bind="text: LocalUpdateTime"></td>
            </tr>
        </tbody>
    </table>
</div>