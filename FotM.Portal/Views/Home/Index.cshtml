@model FotM.Portal.ViewModels.ArmoryViewModel
@using FotM.Config

@{
    ViewBag.Title = "FotM";
}

@section scripts
{
    <!-- TODO: switch to release(minified) versions of scripts -->
    @Scripts.Render("~/bundles/activeView")
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Home/index.js"></script>
}

@section onReady
{
    var armory = @Html.Raw(Json.Encode(Model))
    var media = @Html.Raw(Json.Encode(ViewBag.Media))
    initializePage("@(RegionalConfig.Instance.Region)", armory, media)
}

<br />

<div class="row pager">
    <a role="button" class="btn btn-lg btn-default"
       data-bind="css: { active: leaderboardSelected }, click: leaderboardClicked"
       id="leaderboardBtn">
        Leaderboard
    </a>
    <a role="button" class="btn btn-lg btn-default"
       data-bind="css: { active: playingNowSelected }, click: playingNowClicked"
       id="playingNowBtn">
        Playing now
    </a>
</div>

<br />

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-condensed table-responsive">
            <thead>
                <tr class="hidden-xs">
                    <th>#</th>
                    <th class="hidden-sm">Side</th>

                    <th>
                        <div class="col-lg-4 col-md-4 col-sm-4">Player 1</div>
                        <div class="col-lg-4 col-md-4 col-sm-4">Player 2</div>
                        <div class="col-lg-4 col-md-4 col-sm-4">Player 3</div>
                    </th>
                    <th>Rating</th>
                    <th></th>
                    <th class="hidden-sm">Time</th>
                </tr>
            </thead>

            <tbody data-bind="foreach: selectedPage">
                <tr data-bind="css: DeltaType">
                    <td class="centered" data-bind="text: Rank"></td>
                    <td class="hidden-xs hidden-sm vcentered">
                        <img data-bind="attr:{src: $root.toFactionImage(FactionId)}" alt="FactionImage" />
                    </td>

                    <td>
                        <!-- ko foreach: Players -->
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.Partial("PartialCharacterView")
                            <span class="hidden-sm hidden-md">-</span>
                            <span class="hidden-sm hidden-md" data-bind="text: Realm"></span>
                        </div>
                        <!-- /ko -->
                    </td>


                    <td class="centered" data-bind="text: Rating"></td>
                    <td class="hidden-xs centered" data-bind="text: RatingChange"></td>
                    <td class="hidden-xs hidden-sm centered" data-bind="text: LocalUpdateTime"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-5 col-xs-8">
        <h2>FotM</h2>
        <table class="table table-striped table-condensed table-responsive table-hover">
            <tbody data-bind="foreach: model().TeamSetupsViewModels">
                <tr data-bind="click: $parent.showTeams">
                    <td class="hidden-md" data-bind="text: Rank"></td>
                    <!-- ko foreach: Specs -->
                    <td>
                        <img data-bind="attr:{src: $root.toClassImage(ClassId)}" alt="SpecImage" />
                        <img data-bind="attr:{src: $root.toSpecImage(SpecId)}" alt="SpecImage" />
                    </td>
                    <!-- /ko -->
                    <td data-bind="text: Percent"></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
        <h2>Teams</h2>
        <div class="alert alert-info" data-bind="visible: showFotMHint">
            <strong>Select</strong> setup to browse teams.
        </div>
        <table class="table table-striped table-condensed table-responsive table-hover">
            <tbody data-bind="foreach: selectedTeams">
                <tr>
                    <td class="hidden-md centered" data-bind="text: Rank"></td>
                    <td class="hidden-xs hidden-sm hidden-md hidden-lg">
                        <img data-bind="attr:{src: $root.toFactionImage(FactionId)}" alt="FactionImage" />
                    </td>

                    <td>
                        <!-- ko foreach: Players -->
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <img data-bind="attr:{src: $root.toRaceImage(RaceId)}" alt="RaceImage" />
                            <img data-bind="attr:{src: $root.toSpecImage(SpecId)}" alt="SpecImage" />
                            <span data-bind="text: Name"></span>
                            <span class="hidden-sm hidden-md">-</span>
                            <span class="hidden-sm hidden-md" data-bind="text: Realm"></span>
                        </div>
                        <!-- /ko -->
                    </td>

                    <td class="centered" data-bind="text: Rating"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

