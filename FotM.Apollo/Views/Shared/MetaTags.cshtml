@model FotM.Apollo.Controllers.MetaInformation

<!-- GOOGLE PLUS TAGS -->
<meta itemprop="name" content="@Model.title">
<meta itemprop="description" content="@Model.description">
<meta itemprop="image" content="@Model.previewUrl">
<!-- /GOOGLE PLUS TAGS -->

<!-- FACEBOOK META TAGS -->
<meta property="og:title" content="@Model.title" />
<meta property="og:site_name" content="@Model.name" />
<meta property="og:url" content="@Model.rootUrl" />
<meta property="og:description" content="@Model.description" />
<meta property="og:image" content="@Model.previewUrl" />
<meta property="og:type" content="website" />
<!-- /FACEBOOK META TAGS -->
