<!DOCTYPE html>
<html ng-app="appDebug" ng-controller="DebugController">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>FotM debug</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <input type="text" ng-model="container" />
    <input type="text" ng-model="prefix" />

    <button ng-click="listBlobs()">Load</button>

    <div class="col-lg-8 col-md-8 col-sm-10">
        <table class="table">
            <tbody>
                <tr ng-repeat="blob in blobList">
                    <td>{{toLocalTime(blob.time)}}</td>
                    <td>{{blob.uri}}</td>
                    <td>{{blob.size/1024}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.10/angular.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.10/angular-route.js"></script>
    @Scripts.Render("~/bundles/app")
</body>
</html>
